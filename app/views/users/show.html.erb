<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<div class="container text-center">
    <% if logged_in? && @user == current_user %>
        <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info my-2" %>
    <% end %>
</div>
<h3 class="text-center mt-4">Articles</h3>
    <%= will_paginate @articles, :page_links => false, class: "text-center" %> 
