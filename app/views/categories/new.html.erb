<div class="bg-slate-300">
    <h1 class="text-center mt-4">Create a new Category</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-10">
                <%= render 'shared/errors', obj: @category %>
                <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>
                    <div class="my-4 form-group row">
                        <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                        <div class="col-10">
                            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
                        </div>
                    </div>
                    <div class="my-4 form-group row justify-content-center">
                        <%= f.submit class: "btn btn-outline-light mx-10 w-auto" %>
                    </div>
                <% end %>
            </div>
                <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center pb-5" %>
        </div>
    </div>
</div>