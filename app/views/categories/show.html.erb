<h1 class="text-center mt-4">Category: <%= @category.name %></h1>

<div class="container text-center">
    <% if logged_in? && current_user.admin? %>
        <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-outline-info my-2" %>
    <% end %>
</div>
<h3 class="text-center mt-4">Articles</h3>
    <%= will_paginate @articles, :page_links => false, class: "text-center" %> 
    <%=  render 'articles/article' %>
<div class="mb-4">
    <%= will_paginate @articles, :page_links => false, class: "text-center pb-5" %> 
</div>
