<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded",local: true) do |f| %>

                <div class="my-4 form-group row">
                    <%= f.label :title, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
                    </div>
                </div>

                <div class="form-group row">
                    <%= f.label :description, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_area :description,rows: "6", class: "form-control shadow rounded", placeholder: "Description of article" %>
                    </div>
                </div>

                <div class="my-4 form-group row justify-content-center">
                    <%= f.submit class: "btn btn-outline-light mx-10 w-auto" %>
                </div>
            <% end %>
        </div>
            <%= link_to '[ Cancel and return to article listing ]', articles_path, class:"text-info text-center pb-5" %>
    </div>
</div>